# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/feedback_mcp
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=feedback

# Redis
REDIS_URL=redis://localhost:6379/0

# Data Source API Keys
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_EMAIL=your-email@example.com
ZENDESK_API_TOKEN=your-api-token

INTERCOM_ACCESS_TOKEN=your-intercom-token

SURVEYMONKEY_ACCESS_TOKEN=your-surveymonkey-token

# NLP Models
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
THEME_EXTRACTION_MODEL=all-MiniLM-L6-v2
USE_GPU=false

# Processing
BATCH_SIZE=100
MAX_CONCURRENT_JOBS=5

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
